[
  {
    "name": "theme_info",
    "theme_name": "Dawn",
    "theme_version": "4.0.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://help.shopify.com/en/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "General Settings",
    "settings": [{
      "type": "header",
      "content": "Favicon"
    }, {
      "type": "checkbox",
      "id": "favicon_enable",
      "label": "Use custom icon"
    }, {
      "type": "image",
      "id": "favicon.png",
      "label": "Icon",
      "max-width": 32,
      "max-height": 32,
      "info": "32 x 32px .png required"
    }, {
      "type": "header",
      "content": "Recommended Info",
      "info": "---------"
    }, {
      "type": "checkbox",
      "id": "recommended",
      "label": "Recommended Info Enable ?",
      "default": true,
      "info": "You can Enable\/Dsiable Recommended Info from the settings"
    }]
  },
  {
    "name": "WellCome Text",
    "settings": [{
      "type": "text",
      "id": "wellcome_customer",
      "label": "Wellcome Customer Text Title",
      "default": "Welcome To our shop"
    }, {
      "type": "text",
      "id": "wellcome_content",
      "label": "Wellcome Text Title",
      "default": "Welcome To our shop!"
    }]
  },
  {
    "name": "Currency",
    "settings": [{
      "type": "header",
      "content": "Currency"
    }, {
      "type": "checkbox",
      "id": "currency_enable",
      "label": "Currency Enable"
    }, {
      "type": "paragraph",
      "content": "To offer multiple currencies on your online store, you must first [edit your store's currency formatting](https:\/\/help.shopify.com\/manual\/using-themes\/troubleshooting\/help-script-find-money-formats)."
    }, {
      "type": "paragraph",
      "content": "Use the Country's ISO [Currency Code](http:\/\/www.xe.com\/iso4217.php)."
    }, {
      "type": "textarea",
      "id": "supported_currencies",
      "label": "Supported currencies",
      "default": "USD, USD - US Dollar | EUR, EUR - Euro | GBP, GBP - British Pound",
      "info": "Ex: USD, USD - US Dollar | EUR, EUR - Euro | GBP, GBP - British Pound | INR, INR - Indian Rupee"
    }]
  },
  {
    "name": "Newsletter",
    "settings": [{
      "type": "header",
      "content": "Newsletter"
    }, {
      "type": "radio",
      "id": "newsletter_system",
      "label": "Newsletter Accept",
      "options": [{
        "label": "Shopify Form",
        "value": "by_shopify_form"
      }, {
        "label": "MailChimp",
        "value": "by_mailchimp"
      }],
      "default": "by_shopify_form"
    }, {
      "type": "textarea",
      "id": "newsletter_action",
      "label": "MailChimp form action URL",
      "info": "If you select 'Shopify Form' then no need put MailChimp URL"
    }, {
      "type": "text",
      "id": "email_placeholder",
      "label": "Email Placeholer",
      "default": "Your email address"
    }, {
      "type": "text",
      "id": "button_name",
      "label": "Button Name",
      "default": "Subscribe"
    }, {
      "type": "header",
      "content": "Newsletter Popup"
    }, {
      "type": "checkbox",
      "id": "newsletter_popup_enable",
      "label": "Newsletter Popup Enable",
      "default": false
    }, {
      "type": "checkbox",
      "id": "one_day_popup_enable",
      "label": "Show Popup one time for per day",
      "default": true
    }, {
      "type": "radio",
      "id": "newsletter_style_handle",
      "label": "Newsletter Style",
      "options": [{
        "label": "Style 1",
        "value": "newsletter_style_1"
      }, {
        "label": "style 2",
        "value": "newsletter_style_2"
      }],
      "default": "newsletter_style_1"
    }, {
      "type": "image_picker",
      "id": "newsletter_bg_img",
      "label": "Newsletter BG Image"
    }, {
      "type": "text",
      "id": "newletter_popup_title",
      "label": "Newsletter Popup Title",
      "default": "Newsletter"
    }, {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Newsletter Description",
      "default": "Join over 1,000 people who get free and fresh content delivered automatically each time we publish"
    }, {
      "type": "text",
      "id": "newsletter_button_name",
      "label": "Newsletter Popup Button Name",
      "default": "Subscribe"
    }, {
      "type": "checkbox",
      "id": "dont_show_again_enable",
      "label": "Show 'Dont Show again' field",
      "default": true
    }, {
      "type": "text",
      "id": "dont_show_again_text",
      "label": "Dont Show Title",
      "default": "Don't show this again"
    }, {
      "type": "header",
      "content": "Color"
    }, {
      "type": "color",
      "id": "newsletter_overlay_color",
      "label": "Overlay Color",
      "default": "#000"
    }, {
      "type": "range",
      "id": "newsletter_overlay_opacicty",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Overlay Color Opacity",
      "default": 0.6
    }, {
      "type": "color",
      "id": "popup_newsletter_title_color",
      "label": "Title Color",
      "default": "#434343"
    }, {
      "type": "color",
      "id": "popup_newsletter_description_color",
      "label": "Description Color",
      "default": "#999"
    }, {
      "type": "color",
      "id": "input_field_color",
      "label": "Input Field\/Text Color",
      "default": "#ddd"
    }, {
      "type": "color",
      "id": "newsletter_button_bg_color",
      "label": "Button BG Color",
      "default": "#000000"
    }, {
      "type": "color",
      "id": "newsletter_button_color",
      "label": "Button Color",
      "default": "#fff"
    }, {
      "type": "color",
      "id": "newsletter_button_hover_bg_color",
      "label": "Button Hover BG Color",
      "default": "#666666"
    }, {
      "type": "color",
      "id": "newsletter_button_hover_color",
      "label": "Button Hover Color",
      "default": "#fff"
    }, {
      "type": "color",
      "id": "dont_show_title_color",
      "label": "Dont Show Title Color",
      "default": "#000"
    }, {
      "type": "color",
      "id": "close_icon_color",
      "label": "Close Icon Color",
      "default": "#FF0000"
    }]
  }
]

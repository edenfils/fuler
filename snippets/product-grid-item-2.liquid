<div class="single-best-selling" id="block-{{ block.id }}">
  <div class="row {% if block.settings.sidebar_handle == 'left_banner_handle' %}flex-row-reverse{% endif %}">

    <div class="col-lg-6 col-xl-7 col-md-6">
      <div
        class="deals-content text-{% if block.settings.text_style == 'text_style_left' %}left{% elsif block.settings.text_style == 'text_style_center' %}center{% elsif block.settings.text_style == 'text_style_right' %}right{% endif %} deal-mrg">

        {% if block.settings.banner_hilight_img_enable != '' %}
        <img alt="Highlight"
          src="{% if block.settings.banner_hilight_img %}{{ block.settings.banner_hilight_img | img_url  }}{% else %}http:\/\/via.placeholder.com\/250x250{% endif %}">
        {% endif %}

        {% if block.settings.banner_title != '' %}
        <h2>{{ block.settings.banner_title }}</h2>
        {% endif %}

        {% if block.settings.banner_description != '' %}
        <p>{{ block.settings.banner_description }}</p>
        {% endif %}

        {% if block.settings.date_number != '' %}
        <div class="timer timer-style">
          <div data-countdown="{{ block.settings.date_number }}"></div>
        </div>
        {% endif %}

        {% if block.settings.banner_button != '' %}
        <div class="deals-btn">
          <a href="{{ block.settings.banner_button_url }}">{{ block.settings.banner_button }}</a>
        </div>
        {% endif %}

      </div>
    </div>



    <div class="col-lg-6 col-xl-5 col-md-6">
      <div class="single-best-img">
        <img class="tilter" src="{% if block.settings.banner_img %}{{ block.settings.banner_img | image_url }}{% else %}http:\/\/via.placeholder.com\/620x383{% endif %}" alt="Banner">
      </div>
    </div>

  </div>
</div>
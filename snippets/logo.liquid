
<div class="logo">
    {% if section.settings.logo %}
    {% capture logo_size %}{{ section.settings.logo_width | escape }}x{% endcapture %}

    <a href="{{ routes.root_url }}">
        <img alt="{{ section.settings.logo.alt | default: shop.name }}" src="{{ section.settings.logo | image_url: logo_size }}"
        {%- if section.settings.retina_logo_enable -%}
        srcset="{{ section.settings.logo | image_url: logo_size }} 1x, {{ section.settings.logo | image_url: logo_size, scale: 2 }} 2x"
        {%- endif -%}
        >
    </a>
    {% else %}
    <a href="{{ routes.root_url }}">{{ shop.name }}</a>
    {% endif %}
</div>
